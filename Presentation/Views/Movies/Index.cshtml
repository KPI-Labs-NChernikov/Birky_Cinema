@@model MovieViewModel

@{
    ViewData["Title"] = "";
}

@section Styles {
    <link rel="stylesheet" href="~/css/moviestyle.css" />
    <style>
        .poster-image {
            background-image: url(../movies/it-2-2019/poster.svg);
        }
    </style>
}

@section Scripts {
    <script src="~/lib/autosize/dist/autosize.min.js"></script>
    <script defer src="~/js/moviescript.js"></script>
}

<div class="poster-image">
    <div class="poster-fade">
        <div class="affiche-main">
                <img src="../movies/it-2-2019/affiche.jpeg" alt="ВОНО 2 Афіша">
        </div>
        <div class="movie-description">
            <h2>воно 2 (2019) <span class="age-restriction">18+</span></h2><br>
            <p>
                Страшна істота — танцюючий клоун Пеннівайз родом із пекла — роками тероризує мешканців Деррі.
                Протистояти йому наважуються тільки діти з Клубу невдах. Станеться щось страшне,
                коли через 27 років пролунає дивний телефонний дзвінок… Адже Воно знову зголодніло.
            </p><br>
            <table class="filmrate-table">
                <tr>
                    <td class="filmrate-left">жанр:</td>
                    <td>фільм жахів</td>
                </tr>
                <tr>
                    <td class="filmrate-left">режисер:</td>
                    <td>андрес мускетті</td>
                </tr>
                <tr>
                    <td class="filmrate-left">в головних ролях:</td>
                    <td>Джеймс Мак-Евой, Джессіка Честейн, Білл Гейдер</td>
                </tr>
                <tr>
                    <td class="filmrate-left">автор сценарію:</td>
                    <td>стівен кінг, гері доберман</td>
                </tr>
                <tr>
                    <td class="filmrate-left">тривалість:</td>
                    <td>169 хвилин</td>
                </tr>
                <tr>
                    <td class="filmrate-left">країна-виробник:</td>
                    <td>США</td>
                </tr>
                <tr>
                    <td class="filmrate-left">рейтинг birky cinema:</td>
                    <td>
                        <img src="~/icons/yellowstar.svg" alt="Жовта зірка" class="filmrate-star">
                        <img src="~/icons/yellowstar.svg" alt="Жовта зірка" class="filmrate-star">
                        <img src="~/icons/yellowstar.svg" alt="Жовта зірка" class="filmrate-star">
                        <img src="~/icons/yellowstar.svg" alt="Жовта зірка" class="filmrate-star">
                        <img src="~/icons/greystar.svg" alt="Сіра зірка" class="filmrate-star">
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
<div class="session-timetable">
    <h2>оберіть сеанс</h2><br>
    <form method="get" class="timetable">
        <div class="tt-row">
            <div class="tt-date">14.12.2021</div>
            <div class="tt-times">
                <button type="submit" name="btn_id" value="12:20">12:20</button>
                <button type="submit" name="btn_id" value="15:20">15:20</button>
                <button type="submit" name="btn_id" value="18:20">18:20</button>
                <button type="submit" name="btn_id" value="21:20">21:20</button>
                <button type="submit" name="btn_id" value="23:50">23:50</button>
            </div>
        </div>
        <div class="tt-row">
            <div class="tt-date">16.12.2021</div>
            <div class="tt-times">
                <button type="submit" name="btn_id" value="12:20">12:20</button>
                <button type="submit" name="btn_id" value="15:20">15:20</button>
                <button type="submit" name="btn_id" value="18:20">18:20</button>
                <button type="submit" name="btn_id" value="21:20">21:20</button>
                <button type="submit" name="btn_id" value="23:50">23:50</button>
            </div>
        </div>
        <div class="tt-row">
            <div class="tt-date">14.12.2021</div>
            <div class="tt-times">
                <button type="submit" name="btn_id" value="12:20">12:20</button>
                <button type="submit" name="btn_id" value="15:20">15:20</button>
                <button type="submit" name="btn_id" value="18:20">18:20</button>
                <button type="submit" name="btn_id" value="21:20">21:20</button>
                <button type="submit" name="btn_id" value="23:50">23:50</button>
            </div>
        </div>
    </form>
</div>
<div class="reviews-container">
    <div class="reviews">
        <br><br><h2>відгуки глядачів</h2><br>
        <div class="existing-reviews">
            <div class="review">
                <div class="review-header">
                    <div class="left-info">
                        <div class="review-userinfo">
                            <div class="user-avatar">
                                <img src="../../icons/PersonCircle.svg" alt="default avatar">
                            </div>
                            <h3>Світлана</h3>
                        </div>
                        <div class="review-rating">
                            <img src="~/icons/yellowstar.svg" alt="Жовта зірка" class="review-star">
                            <img src="~/icons/yellowstar.svg" alt="Жовта зірка" class="review-star">
                            <img src="~/icons/yellowstar.svg" alt="Жовта зірка" class="review-star">
                            <img src="~/icons/yellowstar.svg" alt="Жовта зірка" class="review-star">
                            <img src="~/icons/yellowstar.svg" alt="Жовта зірка" class="review-star">
                        </div>
                    </div>
                    <form method="POST">
                        <button class="rcbtn">
                            <img class="red-cross" src="~/icons/redCross.svg" alt="red cross">
                        </button>
                    </form>
                </div>
                <div class="review-text">
                    <p>
                        Найкращий фільм жахів з тих, що я дивилася. Оригінальний сюжет та чудово підібрані актори
                    </p>
                </div>
            </div>
            <div class="review">
                <div class="review-header">
                    <div class="left-info">
                        <div class="review-userinfo">
                            <div class="user-avatar">
                                <img src="../../icons/PersonCircle.svg" alt="default avatar">
                            </div>
                            <h3>Віталій</h3>
                        </div>
                        <div class="review-rating">
                            <img src="~/icons/yellowstar.svg" alt="Жовта зірка" class="review-star">
                            <img src="~/icons/yellowstar.svg" alt="Жовта зірка" class="review-star">
                            <img src="~/icons/yellowstar.svg" alt="Жовта зірка" class="review-star">
                            <img src="~/icons/greystar.svg" alt="Сіра зірка" class="review-star">
                            <img src="~/icons/greystar.svg" alt="Сіра зірка" class="review-star">
                        </div>
                    </div>
                    <form method="POST">
                        <button class="rcbtn">
                            <img class="red-cross" src="~/icons/redCross.svg" alt="red cross">
                        </button>
                    </form>
                </div>
                <div class="review-text">
                    <p>
                        Перша частина була значно краща. Сюжет досить дивний, зв’язок між першим та другим фільмом незрозумілий, враження не дуже
                    </p>
                </div>
            </div>
        </div>
        <form method="post" class="add-review">
            <div class="upper-add-review">
                <div class="megaphone">
                    <img src="~/icons/Megaphone.svg" alt="Рупор">
                </div>
                <textarea id="new-review-text" placeholder="Додайте свій коментар" autocomplete="off" maxlength="400"></textarea>
            </div>
            <div class="lower-add-review">
                <div class="rating-area">
                    <input type="radio" id="star-5" name="rating" value="5" autocomplete="off" required>
                    <label for="star-5" title="Оцінка «5»"></label>
                    <input type="radio" id="star-4" name="rating" value="4" autocomplete="off">
                    <label for="star-4" title="Оцінка «4»"></label>
                    <input type="radio" id="star-3" name="rating" value="3" autocomplete="off">
                    <label for="star-3" title="Оцінка «3»"></label>
                    <input type="radio" id="star-2" name="rating" value="2" autocomplete="off">
                    <label for="star-2" title="Оцінка «2»"></label>
                    <input type="radio" id="star-1" name="rating" value="1" autocomplete="off">
                    <label for="star-1" title="Оцінка «1»"></label>
                    <div><p class="left-chars"><span class="rchars" id="rchars">0/400</span> символів</p></div>
                </div>

                <button id="send-review-btn" type="submit">Надіслати</button>
            </div>
        </form>
    </div>
</div>
